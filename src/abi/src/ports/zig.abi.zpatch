        if(str.len != 36)
            return error.InvalidLength;

        const tl_hex = str[0..8];
        if (str[8] != '-') return error.InvalidCharacter;
        const tm_hex = str[9..13];
        if (str[13] != '-') return error.InvalidCharacter;
        const th_hex = str[14..18];
        if (str[18] != '-') return error.InvalidCharacter;
        const cs_hex = str[19..23];
        if (str[23] != '-') return error.InvalidCharacter;
