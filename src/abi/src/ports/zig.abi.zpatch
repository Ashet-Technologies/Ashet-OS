        const tm: u16 = try std.fmt.parseInt(u16, tm_hex, 16);
        const th: u16 = try std.fmt.parseInt(u16, th_hex, 16);
        const cs: u16 = try std.fmt.parseInt(u16, cs_hex, 16);
