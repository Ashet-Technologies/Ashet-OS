        std.mem.writeInt(u16, uuid[4..6], tm, .little);
        std.mem.writeInt(u16, uuid[6..8], th, .little);
        std.mem.writeInt(u16, uuid[8..10], cs, .big);
        std.mem.writeInt(u48, uuid[10..16], node, .big);
        
