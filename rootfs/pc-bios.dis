#
# Disk Image Script for x86/BIOS machines
#

# Copy syslinux installation fikles
copy-file "/syslinux/libmenu.c32"    "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/cmenu/libmenu/libmenu.c32"
copy-file "/syslinux/libgpl.c32"     "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/gpllib/libgpl.c32"
copy-file "/syslinux/hdt.c32"        "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/hdt/hdt.c32"
copy-file "/syslinux/libcom32.c32"   "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/lib/libcom32.c32"
copy-file "/syslinux/libutil.c32"    "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/libutil/libutil.c32"
copy-file "/syslinux/mboot.c32"      "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/mboot/mboot.c32"
copy-file "/syslinux/menu.c32"       "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/menu/menu.c32"
copy-file "/syslinux/poweroff.c32"   "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/modules/poweroff.c32"
copy-file "/syslinux/reboot.c32"     "../vendor/syslinux/vendor/syslinux-6.03/bios/com32/modules/reboot.c32"

# Copy syslinux configuration files
copy-file "/syslinux/modules.alias"  "./pc-bios/syslinux/modules.alias"
copy-file "/syslinux/pci.ids"        "./pc-bios/syslinux/pci.ids"
copy-file "/syslinux/syslinux.cfg"   "./pc-bios/syslinux/syslinux.cfg"